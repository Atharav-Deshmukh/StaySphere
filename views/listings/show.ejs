<% layout("/layouts/boilerplate") %>

<script>
const mapToken = "<%= process.env.MAP_TOKEN %>";
const listing = <%- JSON.stringify(listing) %>;
</script>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3><%= listing.title %></h3> <br>
    <div class="card show-card listing-card">
      <img src="<%= listing.image.url %>" class="card-img-top show-img " alt="listing_image" />

      <div class="card-body">
        <br />
        <div class="d-flex justify-content-between align-items-center">
          <p class="card-text mb-0 ">
              <span class="fw-bold">Owned By:</span>
              <span class="fst-italic "><%= listing.owner.username %></span>
          </p>
  
          <span class="badge bg-dark-subtle text-dark-emphasis rounded-pill">
             <%= listing.category %>
          </span>
      </div><br>

        <p class="card-text"><%= listing.description %></p>

        <hr>
        <% if (listing.price) { %>
          <h3 class="card-title mb-1">
            &#8377;<%= listing.price.toLocaleString("en-IN") %>
            <span class="fs-6 fw-light">/ night</span>
        </h3>
        <% } %> 
        <p class="card-text"><%= listing.location %>, <%= listing.country %></p>
        
      </div>

      <!-- <br> -->
      <!-- <a href="#" class="btn btn-dark disabled pe-4 ps-4" aria-disabled="true">Booking Feature (Coming soon...)</a> -->
  
      <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
        <div class="card-body mt-1">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark me-2 ps-5 pe-5">Edit</a>
          
          <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE" class="d-inline">
            <button class="btn btn-outline-danger ps-5 pe-5 me-2">Delete</button>
          </form>
          
        </div>

      <% } %>

     
      
      <hr />

      <div>
        <% if(currUser) { %>
        <h4>Leave a Review</h4>

        <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs-validation">
          <div class=" mt-3">
          
  <legend for = "rating" class="from-lebel">Rating</legend> 
            <fieldset class="starability-checkmark">
              <input type="radio" id="no-rate" class="input-no-rate" name="Review[rating]" value="1" checked aria-label="No rating."
/>
              <input type="radio" id="first-rate1" name="Review[rating]" value="1" />
              <label for="first-rate1" title="Terrible">1 star</label>
              <input type="radio" id="first-rate2" name="Review[rating]" value="2" />
              <label for="first-rate2" title="Not good">2 stars</label>
              <input type="radio" id="first-rate3" name="Review[rating]" value="3" />
        
      <label for="first-rate3" title="Average">3 stars</label>
              <input type="radio" id="first-rate4" name="Review[rating]" value="4" />
              <label for="first-rate4" title="Very good">4 stars</label>
              <input type="radio" id="first-rate5" name="Review[rating]" value="5" />
              <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
      
    </div>

          <div class="mb-3 ">
            <label for="comment" class="form-label">comment</label>
            <textarea name="Review[comment]" id="comment" class="form-control" placeholder="Tell us about your experience..." required></textarea>
            <div class="invalid-feedback">Please add Sum Comment For Review</div>
          </div>

        
          <button class="btn btn-outline-dark">Submit</button>
      
  </form>
        <hr />
        <% } %>

       

        <br />
        <% if(listing.reviews.length > 0)  { %>

          <div class="row">
            <h4>All Reviews</h4>
            <BR></BR>
            <% for(let review of listing.reviews) { %>
       
             <div class="card col-5 ms-3 mb-3">
              <div class="card-body">
                <h5 class="card-title">@<%= review.author.username %></h5>
                <p class="card-text"><%= review.comment %></p>
                <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>

                <% 
                   if(currUser && (currUser._id.equals(review.author._id) || currUser._id.equals(listing.owner._id))) { %>
                  <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="post" class="mb-3">
                    <button class="btn btn-dark btn-sm">Delete</button>
                  </form>
                <% } %>

          
             </div>
            </div>
            <% } %>

          </div>
        <% } %>

      </div>
    </div>
  </div>
  
  <div class="col-8 offset-2">
    <h3>Where you'll be</h3>
    <div id="map"></div>
  </div>
</div>

<script src="/js/Map.js"></script>

<br><br>

