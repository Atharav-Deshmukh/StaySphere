<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 9999">

    <% if(success && success.length)  { %>
    <div class="alert alert-success alert-dismissible fade show shadow border-0 rounded-3 d-flex align-items-center" 
         role="alert" style="min-width: 370px;">
        <i class="fa-solid fa-circle-check me-2"></i> 
        <span><%= success %></span> 
        <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>

    <% if(error && error.length)  { %>
    <div class="alert alert-danger alert-dismissible fade show shadow border-0 rounded-3 d-flex align-items-center" 
         role="alert" style="min-width: 370px;">
        <i class="fa-solid fa-circle-exclamation me-2"></i> 
        <span><%= error %></span> 
        <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>
    
</div>

<script>
    const allAlerts = document.querySelectorAll('.alert-dismissible');
    allAlerts.forEach(alert => {
        setTimeout(() => {
            // Get the Bootstrap Alert instance and call the close method
            const bsAlert = new bootstrap.Alert(alert);
            bsAlert.close();
        }, 10000); // 10 seconds
    });
</script>